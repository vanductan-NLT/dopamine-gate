{
  "name": "dopamine-gate",
  "version": "1.0.0",
  "description": "Chrome extension that blocks distracting websites with AI-powered reflection prompts",
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist')) fs.rmSync('dist', {recursive:true})\"",
    "copy:static": "node scripts/build.js",
    "bundle": "esbuild src/background.ts src/contentScript.ts src/popup.ts --bundle --outdir=dist --target=chrome90 --minify --sourcemap",
    "build": "npm run clean && npm run bundle && npm run copy:static",
    "watch": "esbuild src/background.ts src/contentScript.ts src/popup.ts --bundle --outdir=dist --target=chrome90 --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "mindfulness",
    "gemini-ai"
  ],
  "author": "",
  "license": "MIT"
}